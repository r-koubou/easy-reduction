<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <ImageView android:src="@drawable/icon" android:id="@+id/imageView" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="1"></ImageView>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/scaleButtonLayout">
        <Button android:layout_height="wrap_content" android:id="@+id/button2" android:text="1/2" android:layout_weight="1" android:layout_width="0dp" android:onClick="onClickHalfButton"></Button>
        <Button android:layout_height="wrap_content" android:text="1/4" android:id="@+id/button4" android:layout_weight="1" android:layout_width="0dp" android:onClick="onClickQuarterButton"></Button>
        <Button android:layout_height="wrap_content" android:id="@+id/button8" android:text="1/8" android:layout_weight="1" android:layout_width="0dp" android:onClick="onClickOneEighth"></Button>
    </LinearLayout>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/rotateButtonLayout">
        <Button android:layout_weight="1" android:text="@string/leftRotate" android:layout_height="wrap_content" android:layout_width="0dp" android:id="@+id/rotLButton" android:onClick="onClickRotationLeftButton"></Button>
        <Button android:layout_weight="1" android:layout_height="wrap_content" android:layout_width="0dp" android:id="@+id/rotRButton" android:text="@string/rightRotate" android:onClick="onClickRotationRightButton"></Button>
    </LinearLayout>
</LinearLayout>
